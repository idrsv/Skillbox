<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
    <appenders>
        <File name="SearchFile" fileName="logs/search.log">
            <PatternLayout pattern="%d{yyyy-mm-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
        <File name="ErrorsFile" fileName="logs/input_errors.log">
            <PatternLayout pattern="%d{yyyy-mm-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
        <File name="ExceptionFile" fileName="logs/exceptions.log">
            <PatternLayout pattern="%d{yyyy-mm-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </appenders>
    <loggers>
        <Logger name="Search" level="info" additivity="false">
            <appender-ref ref="SearchFile"/>
        </Logger>
        <Logger name="Errors" level="error" additivity="false">
            <appender-ref ref="ErrorsFile"/>
        </Logger>
        <Logger name="Exception" level="debug" additivity="false">
            <appender-ref ref="ExceptionFile"/>
        </Logger>
    </loggers>
</configuration>